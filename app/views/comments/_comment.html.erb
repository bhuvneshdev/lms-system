<div class= "comment clearfix">
	<div class = "comment_content">
		<p class = "comment_name"><strong><%= comment.name %></strong></p>
		<p class = "comment_name"><strong><%= comment.email_id %></strong></p>
		<p class = "comment_body"><%= comment.feedback %></p>
		<p class = "comment_time"><%= time_ago_in_words(comment.created_at) %> Ago </p>
	</div>
	<p><%= link_to 'Delete', [comment.commentable,comment],method: :delete,class: 'button', data: {confirm: 'Are you sure?'} %>
	</p>
</div>