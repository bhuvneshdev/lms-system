= simple_form_for @user, :url => url_for(:action => 'edit', :controller => 'page'), as: 'user_basic', method: :post,wrapper_mappings: {check_boxes: :vertical_radio_and_checkboxes,radio_buttons: :vertical_radio_and_checkboxes,file: :vertical_file_input,boolean: :vertical_boolean}  do |f|
  -if current_user.role != 'admin'
    = f.input :email, placeholder: 'Enter email', disabled: true, hint: 'You cannot change your email.',  wrapper_html: { class: 'username user-pref-email'}
  -else
    = f.input :email, placeholder: 'Enter email', hint: 'You cannot change your email.',  wrapper_html: { class: 'username user-pref-email'}
  = f.input :preferences,
    collection: ['Computer Science','Chemistry','Geography','PHYSICS'],
      wrapper: :vertical_radio_and_checkboxes, wrapper_html: { class: 'user-pref-opt' }
  - if current_user.role == 'admin'
    = f.input :role,
      collection: ['student','faculty','admin'],
        wrapper: :vertical_radio_and_checkboxes, wrapper_html: { class: 'user-pref-role' }
  = f.button :submit, :class => 'btn btn-lg btn-success', :id => 'updateBtn'
