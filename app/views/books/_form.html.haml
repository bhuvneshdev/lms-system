= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :author_name
    %br/
    = f.text_field :author_name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :image_url
    %br/
    = f.text_field :image_url
  .field
    = f.label :price
    %br/
    = f.number_field :price
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :subcategory
    %br/
    = f.text_field :subcategory
  .field
    = f.label :rating
    %br/
    = f.number_field :rating
  .actions
    = f.submit
