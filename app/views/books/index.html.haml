- if !(current_user.role == 'admin')
  %h1 User doesn't have enough permission to view this page
- else
  %h1 Listing books
  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Url
        %th Image url
        %th Price
        %th Category
        %th Subcategory
        %th Rating
        %th
        %th
        %th
    %tbody
      - @books.each do |book|
        %tr
          %td= book.title
          %td= book.description
          %td= book.url
          %td= book.image_url
          %td= book.price
          %td= book.category
          %td= book.subcategory
          %td= book.rating
          %td= link_to 'Show', book
          %td= link_to 'Edit', edit_book_path(book)
          %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Book', new_book_path
